<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a new project to <%= user.firstName %> <%= user.lastName %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/users/<%= user.username %>/projects" method="POST">
				<!--The form-group groups things together and also gives us a little bit of space between them -->
				<div class="form-group">
					<input class="form-control" type="text" name="title" placeholder="Project name">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="" placeholder="תוכן" required>
				</div> -->
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Save</button>
				</div>
			</form>
			<a href="/users/<%= user.username %>">Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>