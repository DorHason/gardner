<% include ../partials/header %>

	<header class="jumbotron">
		<div class="container">
			<h1 align="center" id="h4-padding-bottom">Welcome <%= user.firstName %></h1>
			<h4 align="center">Here you can monitor your projects info and track their progress</h4>
		</div>
	</header>

	<p class="client-btn">
		<a class="btn btn-success btn-md" href="/users/<%= user.username %>/projects/new">Add new project</a>
	</p>
	<div class="well">
		<!-- <div class="text-right">
			<h4>Projects:</h4>
		</div>
		<div class="text-right">
			<a class="btn btn-success" href="/users/<%= user.username %>/projects/new">Add new project</a>
		</div> -->
		<hr>
		<% Object.values(user.projects).forEach(project => { %>
			<div class="row">
				<div class="col-md-12">
					<div class="pull-left w-50">
						<strong><%= project.id %></strong>
						<!-- <p>
							<%= project.content %>
						</p> -->
					</div>
					<div class="pull-right w-50">
						<% if (project.running) { %>
							<a class="btn btn-xs btn-dark stopSession" value="<%= project.id %>">Stop</a>
						<% } else { %>
							<a class="btn btn-xs btn-success continueSession" value="<%= project.id %>">Continue</a>
						<% } %>
						<a class="btn btn-xs btn-warning" 
						   href="/users/<%= user.username %>/projects/<%= project.id %>/edit">Edit</a>
						<form class="delete-client-btn" action="/users/<%= user.username %>/projects/<%= project.id %>?_method=DELETE" method="POST">
							<input type="submit" class="btn btn-xs btn-danger" value="Delete">
						</form>
					</div>
				</div>
			</div>
		<% }) %>
		<hr>
	</div>

<% include ../partials/footer %>